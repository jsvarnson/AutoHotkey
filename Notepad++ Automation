:*:(::
	send, ()
	send, {left}
	return

:*:'::
	send, ''
	send, {left}
	return

:*:"::
	send, {" 2}
	send, {left}
	return
	
:*:{::
	send, {shift down}
	send, {[}{]}
	send, {shift up}
	send, {left}
	return
	
:*:rr::
	send, return
	return
	
